<%= render 'users/list', user: @user, book:@book %>
  <h1>Books</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<h2>Users</h2>
<% @users.each do |user| %>
<div>

  <p>Name：<%= user.name %></p>
  <p><%= link_to 'Show', user_path(user.id) %></p>

  </div>
<% end %>