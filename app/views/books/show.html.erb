


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @book.user, book: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>

<table class="table table-hover table-inverse">

  <tbody>
    <tr>
      <td><%= link_to user_path(@book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br><%= @book.user.name %><% end %></td>
      <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure？", class: 'btn btn-sm btn-danger' %></td>
      <% end %>
    </tr>
  </tbody>
</table>

    </div>
  </div>
</div>





<div class="post-body">

  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>

</div>