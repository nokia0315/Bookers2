<% end %>
<% if @book.user_id == current_user.id %>
<%= form_with model:@book, local: true do |f| %>


<div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class: 'form-control book_title' %>
</div>

<div class="form-group">
<label for="book_opinion">Opnion</label>
  <%= f.text_area :body, autofocus: true, id:"textareaBody", placeholder:"Body", class: 'form-control book_body' %>
</div>

<div class="form-group">
 <%= f.submit 'Update Book', class: 'btn btn-success' %>
</div>


<%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
<% end %>
<% end %>
    </div>
  </div>
</div>




